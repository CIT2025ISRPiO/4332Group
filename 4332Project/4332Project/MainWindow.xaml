<Window x:Class="_4332Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4332Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="ExpBtn" Width="200" Grid.Row="5" HorizontalAlignment="Center" Content="Экспорт" Click="ExpBtn_Click"/>
        <Button x:Name="ImpBtn" Width="200" Grid.Row="7" HorizontalAlignment="Center" Content="Импорт" Click="ImpBtn_Click"/>
        <Button x:Name="ImpJsonBtn" Width="200" Grid.Row="9" HorizontalAlignment="Center" Content="Импорт Json Данных" Click="ImpJsonBtn_Click"/>
        <Button x:Name="ExpJsonInWordBtn" Width="200" Grid.Row="11" HorizontalAlignment="Center" Content="Экспорт в Word" Click="ExpJsonInWordBtn_Click"/>
        <Button  Grid.Row="16" Width="200" x:Name="SidorovButton" Content="О авторе" Click="SidorovButton_Click"/>
    </Grid>
</Window>
